	<fx:Script>
		<![CDATA[
			import choppingblock.video.*;
			
			import com.watchlr.GigaPlayer.Event.GigaPlayerEvent;
			import com.watchlr.GigaPlayer.Event.StreamURLFetchEvent;
			import com.watchlr.GigaPlayer.Util.Util;
			import com.watchlr.Globals;
			
