<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 xmlns:gp="com.watchlr.GigaPlayer.*"
		 width="30" height="22">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import com.watchlr.GigaPlayer.*;
			
			protected var _gigaPlayer:GigaPlayer;
		
			public function get gigaPlayer():GigaPlayer{
				return _gigaPlayer;
			}
			
			public function set gigaPlayer(val:GigaPlayer):void{
				_gigaPlayer = val;
			}
			
			protected function onPlayButtonRollOver(event:MouseEvent):void{
				playNoHover.visible = false;
				playHover.visible = true;
			}
			
			protected function onPlayButtonRollOut(event:MouseEvent):void{
				playHover.visible = false;
				playNoHover.visible = true;
			}
			
			protected function onPauseButtonRollOver(event:MouseEvent):void{
				pauseNoHover.visible = false;
				pauseHover.visible = true;
			}
			
			protected function onPauseButtonRollOut(event:MouseEvent):void{
				pauseHover.visible = false;
				pauseNoHover.visible = true;
			}
			
			protected function onClick(event:MouseEvent):void{
				if(_gigaPlayer){
					if(!_gigaPlayer.playing){
						_gigaPlayer.play();
						playButton.visible = false;
						pauseButton.visible = true;
					}else{
						_gigaPlayer.pause();
						playButton.visible=true;
						pauseButton.visible=false;
					}	
				}
			}
			
		]]>
	</fx:Script>
	<s:Group id="playButton" width="100%" height="100%" rollOver="onPlayButtonRollOver(event)" rollOut="onPlayButtonRollOut(event)" click="onClick(event)">
		<mx:Image id="playNoHover" source="assets/controls/play_button.png" x="0" y="0"></mx:Image>
		<mx:Image id="playHover" source="assets/controls/play_button_glow.png" x="0" y="0" visible="false"></mx:Image>
	</s:Group>
	<s:Group id="pauseButton" width="100%" height="100%" rollOver="onPauseButtonRollOver(event)" rollOut="onPauseButtonRollOut(event)"
			 visible="false" click="onClick(event)">
		<mx:Image id="pauseNoHover" source="assets/controls/pause_button.png" x="0" y="0"></mx:Image>
		<mx:Image id="pauseHover" source="assets/controls/pause_button_glow.png" x="0" y="0" visible="false"></mx:Image>
	</s:Group>
</s:Group>
