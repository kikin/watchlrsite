<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="22" height="22"
		 rollOver="onRollOver(event)" rollOut="onRollOut(event)">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			protected function onRollOver(event:MouseEvent):void{
				speakerImgNoHover.visible=false;
				speakerImgHover.visible=true;
			}
			
			protected function onRollOut(event:MouseEvent):void{
				speakerImgNoHover.visible=true;
				speakerImgHover.visible=false;
			}
		]]>
	</fx:Script>
	<mx:Image id="speakerImgNoHover" source="assets/controls/speaker.png"></mx:Image>
	<mx:Image id="speakerImgHover" source="assets/controls/speaker_glow.png" visible="false"></mx:Image>
</s:Group>
