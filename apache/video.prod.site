<VirtualHost *:80>
    ServerName watchlr.com
    ServerAlias www.watchlr.com

    Alias /static/ /opt/video_env/kikinvideo/static/
    Alias /robots.txt /opt/video_env/kikinvideo/static/robots.txt
    Alias /favicon.ico /opt/video_env/kikinvideo/static/images/favicon.ico
    Alias /crossdomain.xml /opt/video_env/kikinvideo/static/crossdomain.xml

    <Directory /opt/video_env/kikinvideo/static/>
    Order deny,allow
    Allow from all
    Options -Indexes
    </Directory>

    WSGIDaemonProcess video processes=1 threads=25 stack-size=524288
    WSGIProcessGroup video

    SetEnv VIDEO_ENV prod

    WSGIScriptAlias / /opt/video_env/kikinvideo/apache/django.wsgi

    <Directory /opt/video_env/kikinvideo/apache>
    Order allow,deny
    Allow from all
    </Directory>

    LogLevel info
    CustomLog "|/usr/bin/cronolog --symlink=/opt/video_env/logs/accessLog /opt/video_env/logs/accessLog.%Y%m%d" combined

</VirtualHost>